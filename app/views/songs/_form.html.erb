<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <ul style="color: red">
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="<%= @song.errors[:title].any? ? "field_with_errors" : "field" %>">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div><br>

  <div class="<%= @song.errors[:released].any? ? "field_with_errors" : "field" %>">
    <%= f.label :released %>
    <%= f.check_box :released %>
  </div><br>

  <div class="<%= @song.errors[:release_year].any? ? "field_with_errors" : "field" %>">
    <%= f.label :release_year %>
    <%= f.number_field :release_year %>
  </div><br>

  <div class="<%= @song.errors[:genre].any? ? "field_with_errors" : "field" %>">
    <%= f.label :genre %>
    <%= f.text_field :genre %>
  </div><br>

  <div class="<%= @song.errors[:artist_name].any? ? "field_with_errors" : "field" %>">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div><br>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>